<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartAccessControl" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color_2</item>
        <item name="colorPrimaryVariant">@color/theme_color_2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Ensure status bar icons and text are black. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar_theme_main" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="titleTextColor">@color/theme_color_1</item>
        <item name="android:textColor">@color/theme_color_1</item>
    </style>

    <style name="setting_header_text" >
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="setting_name_medium_header_text" >
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@color/grid_text_color</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="setting_small_header_text" >
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="titleTextColor">@color/theme_color_1</item>
        <item name="android:textColor">@color/theme_color_1</item>
        <item name="navigationIcon">@drawable/ic_backarrow</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Remove the box stroke -->
        <item name="boxStrokeColor">@color/screen_background_color</item>
        <!-- Remove the box background -->
        <item name="boxBackgroundMode">none</item>
    </style>

</resources>