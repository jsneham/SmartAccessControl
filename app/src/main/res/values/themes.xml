<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartAccessControl" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar_theme_main" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="setting_header_text" >
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="setting_name_medium_header_text" >
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="setting_small_header_text" >
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>